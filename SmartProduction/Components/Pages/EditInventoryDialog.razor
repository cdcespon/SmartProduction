@using SmartProduction.Models
@using SmartProduction.Services
@inject DialogService DialogService

<RadzenStack Gap="1rem" class="rz-p-4">
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="4"><RadzenLabel Text="Stock FÃ­sico" /></RadzenColumn>
        <RadzenColumn Size="8">
            <RadzenNumeric style="width: 100%;" TValue="decimal" @bind-Value="InventoryItem.QuantityOnHand" />
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="4"><RadzenLabel Text="Stock de Seguridad" /></RadzenColumn>
